FROM python:3
WORKDIR /code
RUN pip install --upgrade wheel pip setuptools

build:
    COPY ../domain+python/* ./
    COPY requirements.txt ./
    COPY setup.py ./
    COPY ibidem ibidem
    RUN pip wheel -r requirements.txt --wheel-dir=wheels
    SAVE ARTIFACT wheels /wheels
    SAVE ARTIFACT ./ /src

test:
    FROM +build
    RUN pip install pytest mock # TODO: Use install extras
    RUN pip install --no-index --find-links=wheels -r requirements.txt
    COPY tests tests
    RUN pytest

docker:
    FROM +build
    RUN pip install --no-index --find-links=wheels -r requirements.txt
    ENTRYPOINT ["codetanks"]

    ARG EARTHLY_GIT_SHORT_HASH
    ARG IMAGE_TAG=$EARTHLY_GIT_SHORT_HASH
    ARG EARTHLY_GIT_PROJECT_NAME
    ARG BASEIMAGE=ghcr.io/$EARTHLY_GIT_PROJECT_NAME

    SAVE IMAGE ${BASEIMAGE}-server:${IMAGE_TAG}
    SAVE IMAGE ${BASEIMAGE}-server:latest

    SAVE ARTIFACT requirements.txt /hack # Hack to force launch dependency resolution

launch:
    LOCALLY
    COPY +docker/hack /tmp/
    RUN docker run --label codetanks=server --net=host --rm $image_name:latest
