#!/usr/bin/env python

from setuptools import setup

setup(
    name = "${name}",
    version="${version}",
    packages = ["ibidem", "ibidem.codetanks", "ibidem.codetanks.viewer", "ibidem.codetanks.viewer.resources"],
    package_dir={
        '': '${package_dir}'
    },
    package_data={
        'ibidem.codetanks.viewer.resources': ['*.png']
    },
    include_package_data=True,
    install_requires=${requirements},
    namespace_packages = ["ibidem", "ibidem.codetanks"],
    zip_safe = True,

    # Metadata
    author = "Morten Lied Johansen",
    author_email = "mortenjo@ifi.uio.no",
    license = "LGPL",
    keywords = "ibidem codetanks",
    url = "https://bitbucket.org/mortenlj/codetanks",

    # Entry points
    entry_points = {
        "gui_scripts": [
            "codetanks-viewer = ibidem.codetanks.viewer.main:main"
        ],
    }
